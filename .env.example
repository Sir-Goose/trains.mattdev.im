# National Rail API Configuration
# Get your API key from: https://www.nationalrail.co.uk/100296.aspx
# Keep this in local .env only. Never commit real keys.
RAIL_API_KEY=your_api_key_here

# TfL API Configuration
# Get your app key/id from: https://api-portal.tfl.gov.uk/
# TFL_APP_KEY (or TFL_API_KEY) is required for TfL endpoints.
# Alternative: create a local 'tfl_key' file in project root.
TFL_APP_KEY=your_tfl_app_key_here
TFL_APP_ID=
TFL_MODES=["tube","overground","dlr"]

# Cache Configuration
CACHE_TTL_SECONDS=60
CACHE_BACKEND=memory
CACHE_SQLITE_PATH=/tmp/trains_mattdev_im_cache.sqlite3

# CORS Configuration
CORS_ORIGINS=["*"]

# Server Configuration
APP_NAME="trains.mattdev.im Train Board API"
APP_VERSION="1.0.0"
DEBUG=false
